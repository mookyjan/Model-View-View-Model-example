<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorToolBar</item>
        <item name="colorPrimaryDark">@color/colorToolBar</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <!-- Base application theme. -->
    <style name="Theme.MercariTest" parent="Base.Theme.MercariTest"></style>

    <style name="Base.Theme.MercariTest" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize  theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>

        <!--<item name="android:background">@android:color/background_light</item>-->
        <!--<item name="android:windowBackground">@android:color/background_light</item>-->
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@mipmap/ic_launcher</item></style>

    <style name="Theme.MercariTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MercariTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MercariTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
